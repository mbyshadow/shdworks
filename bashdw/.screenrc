
## Color, by one or the other
# term xterm-256color
# term screen-256color

## If rxvt-unicode
# term rxvt-unicode-256color


## Status bar
truecolors on
hardstatus off
backtick 0 5 5 "/bin/date" '+%Y-%m-%d'
backtick 1 5 5 "/bin/date" '+%H:%M'
hardstatus alwayslastline '%{#00ff00}[ %H ][%{#ffffff}%= %{7}%?%-Lw%?%{1;0}%{1}(%{15}%n%f%t%?(%u)%?%{1;0}%{1})%{7}%?%+Lw%?%? %=%{#00ff00}][ %{#00a5ff}%{6}%0` %{#ffffff}%{7}%1`%{#00ff00} ]'

## First line statusbar pos.
hardstatus firstline 

## On or off greeting
startup_message off

## change scroll bar to xterm
## default on 'Ctrl+a [' 
# termcapinfo xterm*|rxvt*|kterm*|Eterm* ti@:te@


## Remove vertical bars
# rendition so =00

## Hide horizontal bar
# caption string "%{03} "
## Alt. no use rly,'caption string "%{00}%3n %t"'

## if nano or others act up
# altscreen on 
## Alt. windowlist string "%4n %h%=%f"
